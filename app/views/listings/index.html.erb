<section class="listing-hero d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="col-12">
      <h1 class='text-center'>Where to?</h1>

      <!-- Old Search -->
        <%= form_tag(listings_path, method: :get, class:'form-inline') do %>
          <%= text_field_tag :term, params[:term] %>
          <%= button_tag(name:nil,type: "submit", class: "btn-icon") do %>
            <i class="fa fa-search fa-3x"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>

<main class="container">
  <div class="row my-5">
    <div class="col-12">
      <h1>Listings</h1>
      <%= form_for :listing, url: listings_path, method: :get do |f| %>
        <%= f.text_field :name, placeholder:"Search by name" %>
        <%= f.text_field :description, placeholder:"Search by keyword" %>
        <%= f.text_field :guest_pax, placeholder:"Number of guests" %>
        <%= f.country_select :country, class:"form-input", include_blank:"Select a country" %>
        <%= f.text_field :state, placeholder:"Search by state" %>
        <%= f.text_field :city, placeholder:"Search by city" %>
        <%= f.range_field :price_per_night,type:"range", :min=>0, :max=>@listings.maximum("price_per_night"), :id=>"priceSlider", :step=> 1, :oninput=>"priceOutput.value = priceSlider.value",:value=> @all_listings.maximum("price_per_night") %>
        RM <output name="price-slider-output" id="priceOutput"></output>

        <%= button_tag(name:nil,type: "submit", class: "btn-icon") do %>
          <i class="fa fa-search fa-3x"></i>


        <% end %>
      <% end %>
    </div>

    <div class='card-deck'>
    <% @listings.each do |listing| %>
    <div class='col-4 my-4'>
      <div class="card">
        <% if listing.photos.first %>
          <%= image_tag listing.photos.first.thumb, class: "card-img-top"  %>
        <% else %>
          <%= image_tag 'https://s3-ap-southeast-1.amazonaws.com/sammiepls-airbnb-clone/placeholder.png', class: "card-img-top"  %>
        <% end %>
        <div class="card-block p-3">
          <div class='card-info'>
            <h4 class="card-title"><%= listing.name %></h4>
            <p class="card-text"><%= listing.description %></p>
            <% if listing.tags.count >= 1 %>
            <h6>Tags</h6>
            <%= raw listing.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ') %>
            <% end %>
          </div>
          <div class="card-btn my-1">
            <%= link_to 'View listing', listing, class:"btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= will_paginate @listings %>

</div>
</main>



