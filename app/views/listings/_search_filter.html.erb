<%= form_for :listing, url: listings_path, method: :get do |f| %>
<div class='row'>
<div class='col-3'>
  <%= f.text_field :name, placeholder:"Search by name",class:"form-input" %>
</div>
<div class='col-3'>
  <%= f.text_field :description, placeholder:"Search by keyword",class:"form-input" %>
</div>
<div class='col-3'>
  <%= f.text_field :guest_pax, placeholder:"Number of guests",class:"form-input" %>
</div>
<div class='col-3 select-field'>
  <%= f.country_select :country, class:"form-input", include_blank:"Select a country" %>
</div>
<div class='col-3'>
  <%= f.text_field :state, placeholder:"Search by state",class:"form-input" %>
</div>
<div class='col-3'>
  <%= f.text_field :city, placeholder:"Search by city",class:"form-input" %>
</div>
<div class='col-3 text-center'>
  <%= f.range_field :price_per_night,type:"range", :min=>0, :max=>@listings.maximum("price_per_night"),class:"form-slider", :id=>"priceSlider", :step=> 1, :oninput=>"priceOutput.value = priceSlider.value",:value=> @all_listings.maximum("price_per_night") %>
  RM <output name="price-slider-output" id="priceOutput"></output>
</div>
<div class='col-3'>
  <%= button_tag(name:nil,type: "submit", class: "btn-filter") do %>
    Filter my results <i class="fa fa-fw fa-search"></i>
  </div>


  <% end %>
<% end %>
